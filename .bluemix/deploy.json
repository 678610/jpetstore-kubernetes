{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/deploy.title"
  },
  "description": {
    "$ref": "#/messages/deploy.description"
  },
  "longDescription": {
    "$ref": "#/messages/deploy.longDescription"
  },
  "type": "object",
  "properties": {
    "api-key": {
      "description": {
        "$ref": "#/messages/deploy.apiKeyDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "target-region": {
      "description": {
        "$ref": "#/messages/deploy.regionDescription"
      },
      "type": "string",
      "disabled": false
    },
    "db-image-name": {
      "title": {
        "$ref": "#/messages/deploy.dbImageName"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "mms-image-name": {
      "title": {
        "$ref": "#/messages/deploy.mmsImageName"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "web-image-name": {
      "title": {
        "$ref": "#/messages/deploy.webImageName"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "registry-namespace": {
      "type": "select",
      "enum": [],
      "pattern": "^[a-z0-9][a-z0-9_-]{3,29}$"
    },
    "target-cluster-name": {
      "description": {
        "$ref": "#/messages/deploy.clusterDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "target-cluster-namespace": {
      "description": {
        "$ref": "#/messages/deploy.namespaceDescription"
      },
      "type": "string",
      "pattern": "\\S"
    }
  },
  "required": [
    "api-key",
    "target-region",
    "db-image-name",
    "mms-image-name",
    "web-image-name",
    "registry-namespace",
    "target-cluster-name",
    "target-cluster-namespace"
  ],
  "form": [
    {
      "type": "validator",
      "url": "/devops/setup/bm-helper/custom_helper.html"
    },
    {
      "type": "password",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.apiKey"
      },
      "key": "api-key"
    },
    {
      "type": "select",
      "key": "target-region",
      "readonly": true,
      "title": {
        "$ref": "#/messages/region"
      }
    },
    {
      "type": "section",
      "title": {
        "$ref": "#/messages/deploy.crSection"
      },
      "items": [
        {
          "type": "table",
          "columnCount": 2,
            "widths": ["25%", "75%"],
            "items": [
              {
                "title": { "$ref": "#/messages/deploy.crNamespace" },
                "description": { "$ref": "#/messages/deploy.crNamespaceDescription" },
                "type": "label"
              },
              "registry-namespace"
            ]
        },
        {
          "type": "table",
          "columnCount": 4,
            "widths": ["25%", "25%", "25%", "25%"],
            "items": [
              {
                "title": { "$ref": "#/messages/deploy.imageName" },
                "description": { "$ref": "#/messages/deploy.imageDescription" },
                "type": "label"
              },
              "web-image-name",
              "db-image-name",
              "mms-image-name"
            ]
        }
      ]
    },
    {
      "type": "table",
      "columnCount": 2,
        "widths": ["50%", "50%"],
        "items": [
          {
            "key": "target-cluster-name",
            "readonly": false,
            "type": "select",
            "title": {
              "$ref": "#/messages/deploy.clusterName"
            }
          },
          {
            "key": "target-cluster-namespace",
            "type": "text",
            "readonly": false,
            "title": {
              "$ref": "#/messages/deploy.namespaceName"
            }
          }
        ]
    }    
  ]
}