{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "messages": {
    "$i18n": "locales.yml"
  },
  "title": {
    "$ref": "#/messages/deploy.title"
  },
  "description": {
    "$ref": "#/messages/deploy.description"
  },
  "longDescription": {
    "$ref": "#/messages/deploy.longDescription"
  },
  "type": "object",
  "properties": {
    "api-key": {
      "description": {
        "$ref": "#/messages/deploy.apiKeyDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "target-region": {
      "description": {
        "$ref": "#/messages/deploy.regionDescription"
      },
      "type": "string",
      "disabled": false
    },
    "image-name": {
      "description": {
        "$ref": "#/messages/deploy.imageDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "registry-namespace": {
      "description": {
        "$ref": "#/messages/deploy.registryDescription"
      },
      "type": "string",
      "enum": [],
      "pattern": "^[a-z0-9][a-z0-9_-]{3,29}$"
    },
    "target-cluster-name": {
      "description": {
        "$ref": "#/messages/deploy.clusterDescription"
      },
      "type": "string",
      "pattern": "\\S"
    },
    "target-cluster-namespace": {
      "description": {
        "$ref": "#/messages/deploy.namespaceDescription"
      },
      "type": "string",
      "pattern": "\\S"
    }
  },
  "required": [
    "api-key",
    "target-region",
    "db-image-name",
    "mms-image-name",
    "web-image-name",
    "registry-namespace",
    "target-cluster-name",
    "target-cluster-namespace"
  ],
  "form": [
    {
      "type": "validator",
      "url": "/devops/setup/bm-helper/custom_helper.html"
    },
    {
      "type": "password",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.apiKey"
      },
      "key": "api-key"
    },
    {
      "type": "select",
      "key": "target-region",
      "readonly": true,
      "title": {
        "$ref": "#/messages/region"
      }
    },
    {
      "key": "registry-namespace",
      "type": "select",
      "readonly": false,
      "title": {
        "$ref": "#/messages/deploy.imageRegistryNamespace"
      }
    },
    {
      "type": "table",
      "columnCount": 3,
        "widths": ["33%", "33%", "33%"],
        "items": [
          {
            "label": {
              "title": {
                "$ref": "#/messages/deploy.webImageName"
              },
              "type": "string"
            }
          },
          {
            "label": {
              "title": {
                "$ref": "#/messages/deploy.dbImageName"
              },
              "type": "string"
            }
          },
          {
            "label": {
              "title": {
                "$ref": "#/messages/deploy.mmsImageName"
              },
              "type": "string"
            }
          },
          {
            "key": "web-image-name",
            "type": "text",
            "readonly": false,
            "title": {
              "$ref": "#/messages/deploy.webImageName"
            }
          },
          {
            "key": "db-image-name",
            "type": "text",
            "readonly": false,
            "title": {
              "$ref": "#/messages/deploy.dbImageName"
            }
          },
          {
            "key": "mms-image-name",
            "type": "text",
            "readonly": false,
            "title": {
              "$ref": "#/messages/deploy.mmsImageName"
            }
          }
        ]
    },
    {
      "type": "table",
      "columnCount": 2,
        "widths": ["50%", "50%"],
        "items": [
          {
            "key": "target-cluster-name",
            "readonly": false,
            "type": "select",
            "title": {
              "$ref": "#/messages/deploy.clusterName"
            }
          },
          {
            "key": "target-cluster-namespace",
            "type": "text",
            "readonly": false,
            "title": {
              "$ref": "#/messages/deploy.namespaceName"
            }
          }
        ]
    }    
  ]
}